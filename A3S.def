# Crude Progress Bar Functions
function showPreProgress { 
	printf " >                                                (01%%)\r" 
	sleep 0.05
	printf " >>>>>>                                           (10%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>                                       (20%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>                                  (30%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>>>>>>                             (40%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>>>>>>>>>>>                        (50%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>                   (60%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>              (70%%)\r" 
	sleep 0.5	
}
function showPostProgress {
	printf " >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>         (90%%)\r" 
	sleep 0.05
	printf " >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> (100%%) - ${green}Done\r${normal}"
	printf "\n"
}

