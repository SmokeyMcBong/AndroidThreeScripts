A3S_DIR="$( cd $( dirname ${0} )/.. && pwd )"
A3S_CONF_DIR="${A3S_DIR}/config.d"
A3S_PREFS_DIR="${A3S_DIR}/prefs"

source ${A3S_CONF_DIR}/A3S.conf    			  # Import Default Script Variables
source ${A3S_PREFS_DIR}/UserPrefs.conf    # Import User Configurable Variables

function get_time {
  TIME=$(date +"%r")
}

# basic settings file generator
function Generate_Basic_Settings {
  get_time
  printf '%s\n' "##### A3S Settings File, AutoGenerated at ${TIME} ######" \
  " " \ " " \
  "Dependencies_Satisfied=false" \
  " " \
  >> ${A3S_DIR}/a3s.settings
}

# dynamicly pass settings to a3s.settings file
